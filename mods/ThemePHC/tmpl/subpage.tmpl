<html>
<head>
	<title><tmpl_if page_title>%%page_title%% - </tmpl_if>Pleasant Hill Church</title>
	<link href="%%modpath%%/css/subpage.css" rel="stylesheet" type="text/css" />
</head>

<body>

<tmpl_include main-nav.inc.tmpl>

<div id='header'>
	<div id='header-shadow'>
		<div id='mainlogo-wrap'>
			<a href='/'>
				<!--<img src='%%modpath%%/images/mainlogo-cropped2-250px.png' id='mainlogo' border=0>-->
				<img src='%%modpath%%/images/mainlogo-300px.png' id='mainlogo' border=0>
			</a>
		</div>
	</div>
</div>

<div class='bodywrap'>
	<div class='bodycontent'>
		
		<div class='nav_level2'>
			<span class=breadcrumbs>
			<tmpl_if nav_path>
				<tmpl_loop nav_path>
					<tmpl_if current>
						<span class=current>%%title%%</span>
					<tmpl_else>
						<a href='%%url%%'>%%title%%</a><span class=divider> &raquo;</span>
					</tmpl_if>
				</tmpl_loop>
			</tmpl_if>
			</span>
			
			<tmpl_if nav_kids>
				<span class=divider>&raquo;</span>
				<span class=kids>(
				<tmpl_loop nav_kids>
				<a href='%%url%%'>%%title%%</a><tmpl_unless last><span class='or_divider'> | </span></tmpl_unless>
				</tmpl_loop>
				)</span>
			</tmpl_if>
		</div>
		
		%%page_content%%
		
		<tmpl_include user-footer.inc.tmpl>
	</div>
</div>

<div id='footer'>

</div>

</body>
</html>
