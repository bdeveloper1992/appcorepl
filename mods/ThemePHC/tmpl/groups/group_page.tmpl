		.event_list a:active,
		.event_list a:hover*/
		.event_list a
		{
			text-decoration: none;
			/*color: black;*/
			
		}
		
		.event_list a:active,
		.event_list a:focus
		{
			outline: none;
		}
		
		.event_list h5
		{
			background: url("%%modpath%%/images/calendar_background.jpg") no-repeat scroll 0 0 transparent;
			color: #A09F9F !important;
			display: block;
			float: left;
			font-size: 1.4em;
			height: 41px;
			margin: 0 15px 0px 10px;
			padding: 2px 0 0;
			text-align: center;
			width: 41px;
		}	
		
		.event_list h5 strong
		{
			color: #FFFFFF;
			display: block;
			font-size: 0.6em;
			text-transform: uppercase;
		}
		
		.event_list h3.event-title
		{
			color: black;
			/*padding: 2px 35px 2px 10px;*/
			margin: 0;
			border: 0;
			width: 90%;
			height: 1.25em;
			overflow: hidden;
		}
		
		.event_list p
		{
			color: #6C6C6C !important;
			padding: 0 35px 0px 10px;
			text-indent: 0;
			margin-top: -5px;
			margin: 0;
		}
		
		.event_list ul
		{
			margin: 0;
			padding: 0;
		}
		
		.event_list li
		{
			background-color: #FFFFFF;
			/*background: red;*/
			border-bottom: 1px dotted black;
			font-size: 1.5em;
			list-style-type: none;
			text-align: left;
			padding-bottom: 10px;
			margin-top: 10px;
		}
		
		.event_list 
		{
			background: white;
			/*padding: 5px 0 0 0;*/
			/*border-top: 2px solid black;
			border-bottom: 2px solid black;*/
			font-size: 8px;
			
			/*float: right;
			margin-right: -20em;*/
			
			width: 20.5em;
			margin-right: -22.5em;
			/*margin-top: -4em;*/
			padding: .5em;
			float: right;
			background: #E6E6E6;
			-moz-border-radius: 3px;
		}
		
		
		</style>
			
		<ul>
			<tmpl_loop events_dated>
				<tmpl_if folder_name>
					<li>
						<a href='/connect/events/%%folder_name%%'>
							<!-- FF Parser Error Fix!-->
							<!--
							<h5>
								<strong>%%month_name_short%%</strong>
								%%day%%
							</h5>
							<h3 class='event-title'>%%subject%%</h3>
							<p>%%day_name%% at %%time%%<tmpl_if event_show_endtime> until %%end_time%%</tmpl_if></p>
							-->
							<h5>
								<strong>%%month_name_short%%</strong>
								%%day%%
							</h5>
							<h3 class='event-title'>%%subject%%</h3>
							<p>%%day_name%% at %%time%%<tmpl_if event_show_endtime> until %%end_time%%</tmpl_if></p>
						</a>
					</li>
				</tmpl_if>
			</tmpl_loop>
			<!--<li class='readmore'>
				<a href='/connect/events'>
					<span>See More...</span>
				</a>
			</li>-->
		</ul>
	</div>
</tmpl_if>


