	<style>
		.edit
		{
			float: right;
			
		}
		
		.edit a
		{
			text-decoration: none;
			font-weight: normal;
			color: #364a90;
		}
	</style>
	
	<table class='entry' width='100%' class=dir-body>
		
	<tmpl_loop entries>
		<tmpl_if display>
			<tr>
				<td colspan=2>
					<a name='%%first%%<tmpl_if spouse> &amp; %%spouse%%</tmpl_if> %%last%%'><hr size=1></a>
				</td>
			</tr>
			
			<tr rowspan="2">
				<td class='photo_cell' align='center' valign='top'>
					<tmpl_if photo>
						<a href='%%large_photo%%' target='_new'><img src='%%photo%%' class='photo' border='0'></a>
					<tmpl_else>
						<!--<div class='no_photo'>
							?
						</div>-->
					</tmpl_if>
				</td>
				<td class='info_cell' valign='top'>
					<table class='dirinfo'>
						<tr class='name'>
							<td class='name' colspan=2>
								%%first%% <tmpl_if spouse> &amp; %%spouse%%</tmpl_if> %%last%%
							
								<tmpl_if can_edit>
									<div class='edit'>
										<a href='#'>Edit</a>
									</div>
								</tmpl_if>
							</td>
						</tr>
						<tmpl_if incomplete_flag>
							<tr class='incomplete'>
								<td colspan='2'>
									<div class='incomplete'>
										(No Directory Info Sheet found - Just fill one out and drop it off at the sound booth.)
									</div>
								</td>
							</tr>
						</tmpl_if> 
						<tmpl_if adress>
							<tr class='address'>
								<td class='value' colspan='2'>
									%%adress%%
								</td>
							</tr>
						</tmpl_if>
						<tmpl_if home>
							<tr class='phone phone-home'>
								<td class='key'>
									Home Phone:
								</td>
								<td class='value'>
									%%home%%
								</td>
							</tr>
						</tmpl_if>
						<tmpl_unless p_cell_dir>
							<tmpl_if cell>
								<tr class='cell'>
									<td class='key'>
										<tmpl_if spouse>%%first%%'s </tmpl_if>Cell:
									</td>
									<td class='value'>
										%%cell%%
									</td>
								</tr>
							</tmpl_if>
						</tmpl_unless>
						<tmpl_unless p_spouse_cell_dir>
							<tmpl_if spouse_cell>
								<tr class='cell'>
									<td class='key'>
										<tmpl_if spouse>%%spouse%%'s </tmpl_if>Cell:
									</td>
									<td class='value'>
										%%spouse_cell%%
									</td>
								</tr>
							</tmpl_if>
						</tmpl_unless>
						
						
						<tmpl_unless p_email_dir>
							<tmpl_if email>
								<tr class='email'>
									<td class='key'>
										<tmpl_if spouse>%%first%%'s </tmpl_if>Email:
									</td>
									<td class='value'>
										<a href='mailto:%%email%%'>%%email%%</a>
									</td>
								</tr>
							</tmpl_if>
						</tmpl_unless>
						<tmpl_unless p_spouse_cell_email>
							<tmpl_if spouse_email>
								<tr class='email'>
									<td class='key'>
										<tmpl_if spouse>%%spouse%%'s </tmpl_if>Email:
									</td>
									<td class='value'>
										<a href='mailto:%%spouse_email%%'>%%spouse_email%%</a>
									</td>
								</tr>
							</tmpl_if>
						</tmpl_unless>
						
						
						<tmpl_if birthday>
							<tr class='birthday'>
								<td class='key'>
									<tmpl_if spouse>%%first%%'s </tmpl_if>Birthday:
								</td>
								<td class='value'>
									%%birthday%%
								</td>
							</tr>
						</tmpl_if>
						<tmpl_if spouse_birthday>
							<tr class='birthday'>
								<td class='key'>
									<tmpl_if spouse>%%spouse%%'s </tmpl_if>Birthday:
								</td>
								<td class='vale'>
									%%spouse_birthday%%
								</td>
							</tr>
						</tmpl_if>
						
						<tmpl_if anniversary>
							<tr class='anniversary'>
								<td class='key'>
									Anniversary:
								</td>
								<td class='vale'>
									%%anniversary%%
								</td>
							</tr>
						</tmpl_if>
						<tmpl_if comments>
							<tr class='comments'>
								<td colspan='2'>
									<i>%%comments%%</i>
								</td>
							</tr>
						</tmpl_if> 
						
						<tmpl_if kids>
							<tr class='kids'>
								<td class='key' valign='top'>
									Children:
								</td>
								<td class='value'>
									<table class='kids'>
										<tmpl_loop kids>
											<tr>
												<td class='name'>
													%%display%%
												</td>
												<td class='bday'>
													%%birthday%%
												</td>
											</tr>
										</tmpl_loop>
									</table>
								</td>
							</tr>
						</tmpl_if>
						
						
					</table>
				</td>
			</tr>
		</tmpl_if>
	</tmpl_loop>
			
			
	</table>
	
