<html>
<head>
	<title>Pleasant Hill Church</title>
	<link href="%%modpath%%/css/frontpage.css" rel="stylesheet" type="text/css" />
	<script src='%%appcore%%/js/jquery-1.5.2.min.js'></script>
	<script src='%%appcore%%/js/jquery-scrollto.js'></script>
	<script src='%%modpath%%/js/frontpage.js'></script>
</head>

<body>

<tmpl_include main-nav.inc.tmpl>


<div id='header'>
	<div id='header-shadow'>
		<div id='mainlogo-wrap'>
			<!--<img src='%%modpath%%/images/mainlogo.png' id='mainlogo'>-->
			<img src='%%modpath%%/images/mainlogo-300px.png' id='mainlogo'>
		</div>
	</div>
</div>

<div id='graphicblock-wrap'>
	<div id='graphicblock'>
		<div id='graphic-wrap'>
			<div class='block-item' id='block-title-slide'>
				<center>
					<img src='%%modpath%%/images/logo-white-textunder-250px.png' style='margin-top:30px'>
				</center>
			</div>
			<div class='block-item' id='block-video'>
				<center>
					<iframe src="http://player.vimeo.com/video/21895965?byline=0&amp;portrait=0" width="400" height="300" frameborder="0" class='vimeo-video'></iframe>
					<!--<h3>Still working on Video...</h3>-->
				</center>
			</div>
			<div class='block-item' id='block-events'>
				<center>
					<h3>Still working on Events...</h3>
				</center>
			</div>
			<div class='block-item' id='block-photos'>
				<center>
					<h3>Still working on Photos...</h3>
				</center>
			</div>
			<div class='block-item' id='block-prayers'>
				<center>
					<h3>Still working on Prayer Requests...</h3>
				</center>
			</div>
		</div>
		<div class='sidebar'>
			<div class='sidebar-link-block'>
				<a href='/video' class='link-block' id='link-video' block-suffix='video'>
					<span class='title'>Watch Current Message</span><br/>
					<span class='subtitle'>"Doctrine Matters" - Apr 3</span>
				</a>
			</div>

			<div class='sidebar-link-block'>
				<a href='/events' class='link-block' id='link-events' block-suffix='events'>
					<span class='title'><b>Upcomming Events</b></span><br/>
					<span class='subtitle'>Updated two days ago!</span>
				</a>
			</div>

			<div class='sidebar-link-block'>
				<a href='/photos' class='link-block' id='link-photos' block-suffix='photos'>
					<span class='title'><b>Photos from PHC</b></span><br/>
					<span class='subtitle'>Updated yesterday!</span>
				</a>
			</div>

			<div class='sidebar-link-block'>
				<a href='/prayer' class='link-block' id='link-prayers' block-suffix='prayers'>
					<span class='title'><b>Prayer Requests</b></span><br/>
					<span class='subtitle'>Updated about two hours ago!</span>
				</a>
			</div>

		</div>
	</div>
</div>

<div class='bodywrap'>
	<!-- Main nav links here -->
	<div class='bodycontent'>
		%%page_content%%
		<tmpl_include user-footer.inc.tmpl>
	</div>
	<!-- In-page footer here -->
</div>

<div id='footer'>

</div>

</body>
</frontpage>